conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Source Code Pro:size=12',
    gap_x = 5,
    gap_y = 60,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 5.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
${color #5b6dad}$nodename - $sysname $kernel on $machine
$hr
${color #5b6dad}CPU Frequency:${color #7f8ed3} $freq_g GHz
${color #5b6dad}CPU:${color #7f8ed3} ${cpu}% ${color #5b6dad}${cpubar 5,85}   ${color #5b6dad}Disk I/O: ${color #7f8ed3}${diskio}
${color #5b6dad}${cpugraph 0 32,155 000000 7f8ed3} $alignr${color #5b6dad}${diskiograph 32,155 000000 7f8ed3 750}
${color #5b6dad}RAM Usage:${color #7f8ed3} $mem${color #5b6dad}/${color #7f8ed3}$memmax - $memperc% ${color #5b6dad}$membar
${color #5b6dad}Swap Usage:${color #7f8ed3} $swap${color #5b6dad}/${color #7f8ed3}$swapmax - $swapperc% ${color #5b6dad}${swapbar}${color #7f8ed3}
$hr
${color #5b6dad}File systems:
 / ${color #7f8ed3}${fs_used /}/${fs_size /} ${fs_bar 6 /}
$stippled_hr
${color #5b6dad}Networking:
${color #7f8ed3}  eth0:
Down:${color #7f8ed3} ${downspeed eth0}/s${color #7f8ed3} ${offset 70}Up:${color #5b6dad} ${upspeed eth0}/s
 ${color black}${downspeedgraph eth0 32,150 000000 7f8ed3} $alignr${color black}${upspeedgraph eth0 32,150 7f8ed3 000000}
${color #7f8ed3}  wlan0:
Down:${color #7f8ed3} ${downspeed wlan0}/s${color #7f8ed3} ${offset 70}Up:${color #5b6dad} ${upspeed wlan0}/s
 ${color black}${downspeedgraph wlan0 32,150 000000 7f8ed3} $alignr${color black}${upspeedgraph wlan0 32,150 7f8ed3 000000}
]]
